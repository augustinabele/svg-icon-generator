---
export interface Props {}
---

<div class="pt-8 flex items-center">
  <label for="search" class="sr-only">Search</label>
  <div class="relative w-full">
    <div
      class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
    >
      <svg
        aria-hidden="true"
        class="w-5 h-5 text-gray-500 dark:text-gray-400"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
    <input
      type="text"
      id="search"
      class="p-4 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
      placeholder="Shopping cart, Calendar, Home, Search..."
      required
    />
    <button
      type="button"
      class="absolute inset-y-0 right-0 flex items-center pr-3"
    >
    </button>
  </div>
  <button
    id="button"
		type="button"
    class="relative inline-flex items-center justify-center px-1 p-0.5 ml-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800"
  >
		<span
			class="relative px-5 py-4 transition-all ease-in duration-75 bg-dark rounded-md group-hover:bg-opacity-0 text-white w-40"
		>
      Generate
    </span>
  </button>
</div>

<div id="results" class="mt-8 grid grid-cols-4 gap-4">
</div>

<script>
  import { fetchIconFromPrompt } from "../services/generate";
  const button = document.getElementById("button");
	const input = document.getElementById("search") as HTMLInputElement;
	const results = document.getElementById("results");
	var generatedSvg = [];
	
	input.addEventListener("keypress", function(event) {
		if (event.key === "Enter") {
			event.preventDefault();
			button.click();
		}
	});
	
  button.addEventListener("click", () => fetchAndDisplay(input.value));
	
	const fetchAndDisplay = async (promt: string) => {
		results.innerHTML = '';
		generatedSvg = await fetchIconFromPrompt(input.value);
		generatedSvg.map((svg) => results.innerHTML += '<div class="w-full h-full">' + svg + '</div>');
	};

</script>

<style>
  .bg-dark {
    background-color: #1f2027;
  }
</style>
